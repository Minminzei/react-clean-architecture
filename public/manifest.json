{
  "manifest_version": 3,
  "name": "[Dev] Browser Extension",
  "description": "Browser Extension",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "js": ["assets/index.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["storage", "tabs"]
}
